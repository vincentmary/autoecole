{% extends 'AppBundle::base.html.twig' %}


{% block body %}
    <div class="row">
        <div class="text-center">
            <div>
                <ul style="list-style-type: none;">
                    {% set links = {'Demande de fabrication de permis': 'https://permisdeconduire.ants.gouv.fr'
                        , 'Résultat du permis de conduire': 'http://www.securite-routiere.gouv.fr/permis-de-conduire/resultats-du-permis-de-conduire'
                        , 'Vérifications intérieures, extérieures et premiers secours': 'documents/banque_verifications.pdf'} %}
                    {% for key, link in links %}
                    <li>
                        <a href="{{ link }}" target="_blank" style="text-decoration: underline">{{ key }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}