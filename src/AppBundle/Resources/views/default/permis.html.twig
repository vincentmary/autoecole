{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-default">
        <div class="container">
            <ul class="nav navbar-nav permis-menu">
              <li class="active permis-menu-item">
                <a href="#permis-b" class="text-center">Permis B</a>
              </li>
              <li class="permis-menu-item">
                <a href="#permis-aac" class="text-center">Conduite Accompagnée (Permis AAC)</a>
