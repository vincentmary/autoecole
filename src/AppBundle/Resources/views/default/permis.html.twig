                {% for list in lists %}
                     <li class="list-group-item"><span class="glyphicon glyphicon-ok green"></span> {{ list }}</li>
                {% endfor %}
            </ul>
            <div class="text-center">
                <a class="moreinfos" href="{{ path('contact') }}">Plus d'informations</a>
            </div>
        </div>
    </div>
