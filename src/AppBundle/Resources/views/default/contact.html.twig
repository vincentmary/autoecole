{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="well row">
        <div class="text-center h3">
            Formulaire de contact
        </div>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}, 'label': 'Nom, prénom'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.mail, {'attr': {'class': 'form-control'}, 'label': 'Courriel (email)'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.tel, {'attr': {'class': 'form-control'}, 'label': 'Téléphone (Optionnel)', 'pattern': '[\+]\d{2}[\(]\d{2}[\)]\d{4}[\-]\d{4}'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.message, {'attr': {'class': 'form-control','rows':'5', 'placeholder':'Votre message à l\'autoécole' }}
            ) }}
        </div>
        <div class="form-group">
            <div class="g-recaptcha" data-sitekey="6LeDKHMUAAAAALW1wRGuwkOgDtQJ6oJyysG2ji_E" data-callback="enableSubmit"></div>
        </div>
        <div class="form-group">
            {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Envoyer', 'id': 'submitButton', 'disabled': 'true'}) }}
        </div>
        {{ form_end(form) }}
    </div>

    <script>
      function enableSubmit() {
        document.getElementById("submitButton").disabled = false;
      }
    </script>
{% endblock %}